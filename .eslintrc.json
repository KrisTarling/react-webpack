{
    "parser": "babel-eslint",
    "rules": {
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-multi-spaces": [
          2,
          {
            "exceptions": {
              "VariableDeclarator": true
            }
          }
        ],
        "key-spacing": [
          0,
          {
            "align": "value"
          }
        ],
        "no-console": [1]
    },
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    }
}
